
<div class="page-header">
  <h1>Órdenes de Mantenimiento
    <small>Lista</small>
  </h1>
</div>


<table id="tabla-ordenes-mantenimiento" class="table table-striped" width="100%">
  <thead>
  <tr>
    <th>Nro.</th>
    <th>Fecha</th>
    <th>Vehículo</th>
    <th>Kilometraje</th>
    <th>Tipo</th>
    <th>Detalle</th>
    <th>Encargado</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @orden_mantenimientos.each do |orden_mantenimiento| %>
      <tr>
        <td><%= orden_mantenimiento.id %></td>
        <td><%= orden_mantenimiento.fecha %></td>
        <td><%= orden_mantenimiento.vehiculo_placa %></td>
        <td><%= orden_mantenimiento.kilometraje %></td>
        <td><%= orden_mantenimiento.tipo %></td>
        <td><%= orden_mantenimiento.detalle %></td>
        <td><%= orden_mantenimiento.encargado %> </td>
        <td>

          <div class="btn-group btn-group-sm no-printable" role="group" aria-label="...">
            <%= link_to raw('<span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>'), orden_mantenimiento, class: "btn btn-default", title: "Mostrar Detalles" %>
            <%= link_to raw('<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>'), edit_orden_mantenimiento_path(orden_mantenimiento), class: "btn btn-warning", title: "Editar" %>
            <%= link_to raw('<span class="glyphicon glyphicon-remove" aria-hidden="true"></span>'), orden_mantenimiento, method: :delete, data: {confirm: '¿Estás Seguro?'}, class: "btn btn-danger", title: "Eliminar" %></td>
        </div>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Orden de Mantenimiento', new_orden_mantenimiento_path, class: "btn btn-default" %>


