<p id="notice"><%= notice %></p>

<div class="page-header">
  <h1>Conductores
    <small>Lista</small>
  </h1>
</div>

<table id="tabla-choferes" class="table table-striped" width="100%">
  <thead>
  <tr>
    <th>Nombres</th>
    <th>Apellidos</th>
    <th>Fecha Nacimiento</th>
    <th>Teléfono</th>
    <th>Tipo de Licencia</th>
    <th>Experiencia</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @chofers.each do |chofer| %>
      <tr>
        <td><%= chofer.nombres %></td>
        <td><%= chofer.apellidos %></td>
        <td><%= chofer.fechaNacimiento %></td>
        <td><%= chofer.telefono %> </td>
        <td><%= chofer.tipoLicencia %></td>
        <td><%= chofer.experiencia %></td>
        <td>

          <div class="btn-group btn-group-sm no-printable" role="group" aria-label="...">

            <%= link_to raw('<span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>'), chofer, class: "btn btn-default", title: "Mostrar Detalles" %>
            <%= link_to raw('<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>'), edit_chofer_path(chofer), class: "btn btn-warning" %>
            <%= link_to raw('<span class="glyphicon glyphicon-remove" aria-hidden="true"></span>'), chofer, method: :delete, data: {confirm: 'Estás seguro?'}, class: "btn btn-danger" %>

          </div>

        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Conductor', new_chofer_path, class: "btn btn-primary" %>

<script>

  $.extend($.fn.dataTable.defaults, {
    responsive: true
  });


</script>