
  <h2>Registro</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <div class="form-group">

          <label for="user_email">Email:  </label>
          <%= f.email_field :email, autofocus: true, class: "form-control", 'data-validation' => 'email'%>
        </div>
      </div>

      <div class="field">
        <div class="form-group">

          <label for="user_password">Contraseña:</label>
          <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> caracteres mínimo)</em>
          <% end %><br/>
          <%= f.password_field :password, autocomplete: "off", class: "form-control", 'data-validation' => 'length alphanumeric', 'data-validation-length' => 'min6' %>

        </div>
      </div>

      <div class="field">
        <div class="form-group">

          <label for="user_password_confirmation">Confirme contraseña: </label>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", 'data-validation' => 'length alphanumeric', 'data-validation-length' => 'min6' %>

        </div>
      </div>

      <div class="row">
        <div class="col-xs-4">

          <div class="form-group">

            <label for="user_cedula">Cédula: </label>

            <%= f.number_field :cedula, autocomplete: "off", label: "Cédula", class: "form-control cedula", 'data-validation' => 'length',
                'data-validation-length' => 'min10', 'data-validation-error-msg' => 'Su número de identificación debe tener al menos 10 números'%>

          </div>

        </div>

      </div>

      <div class="field">
        <div class="form-group">

          <label for="user_name">Nombres:</label>
          <%= f.text_field :name, autocomplete: "off", label: "Nombre", class: "form-control", 'data-validation' => 'custom', 'data-validation-regexp' => '[a-zA-ZÀ-ÖØ-öø-ÿ]+\.?(( |\-)[a-zA-ZÀ-ÖØ-öø-ÿ]+\.?)*' %>

        </div>
      </div>

      <div class="field">
        <div class="form-group">

          <label for="user_last_name">Apellidos:</label>
          <%= f.text_field :last_name, autocomplete: "off", label: "Apellidos", class: "form-control", 'data-validation' => 'custom', 'data-validation-regexp' => '[a-zA-ZÀ-ÖØ-öø-ÿ]+\.?(( |\-)[a-zA-ZÀ-ÖØ-öø-ÿ]+\.?)*' %>

        </div>
      </div>

      <div class="row">
        <div class="field col-xs-4">
          <div class="form-group">

            <label for="user_telephone">Teléfono:</label>
            <%= f.number_field :telephone, autocomplete: "off", label: "Teléfono", class: "form-control", 'data-validation' => 'number'
                 %>

          </div>
        </div>
      </div>

      <div class="field">
        <div class="form-group">

          <label for="user_department">Departamento:</label>
          <%= f.text_field :department, label: "Departamento", class: "form-control" %>

        </div>
      </div>

      <div class="field">

        <div class="form-group">

          <label for="user_charge">Cargo: </label>
          <%= f.text_field :charge, label: "Cargo", class: "form-control", 'data-validation' => 'custom', 'data-validation-regexp' => '[a-zA-ZÀ-ÖØ-öø-ÿ]+\.?(( |\-)[a-zA-ZÀ-ÖØ-öø-ÿ]+\.?)*' %>

        </div>
      </div>

      <div class="actions">
        <%= f.submit "Registrarse", class: "btn btn-default btn-lg" %>
      </div>

  <% end %>

  <%= render "devise/shared/links" %>



<script src="//cdnjs.cloudflare.com/ajax/libs/jquery-form-validator/2.3.26/jquery.form-validator.min.js"></script>

