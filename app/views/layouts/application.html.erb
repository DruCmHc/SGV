<!DOCTYPE html>
<html>
  <head>
    <title>SGV</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header>


    <nav class="navbar navbar-default">
      <div class="container-fluid">

        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Gestión Vehicular</a>
        </div>

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li class="active"><a href="#">Prestamos<span class="sr-only">(current)</span></a></li>
            <li><a href="#">Vehiculos</a> </li>
            <li><a href="#">Personas</a></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Órdenes <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><a href="#">Combustible</a></li>
                <li role="separator" class="divider"></li>
                <li><a href="#">Mantenimiento</a></li>
                <li role="separator" class="divider"></li>
                <li><a href="#">Reparación</a></li>
              </ul>
            </li>
          </ul>

          <ul class="nav navbar-nav navbar-right">
            <p class="navbar-text">
              <% if user_signed_in? %>
                  Conectado como <mark><strong><%= current_user.email %>.</strong></mark> No eres t&uacute;?
                  <%= link_to "Log off", destroy_user_session_path, :method => :delete%>
              <% else %>
                  <%= link_to "Sign Up", new_user_registration_path %> o
                  <%= link_to "Login", new_user_session_path %>
              <% end %>
            </p>
          </ul>
        </div>
      </div>
    </nav>

  </header>

  <body>

    <div id="main-container" class="container-fluid">
      <div class="row">

        <div class="col-lg-2">

        </div>
        <div class="col-lg-6">

              <% if user_signed_in? %>
              <% flash.each do |key, value| %>
                  <div class="alert alert-success alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <%= value %>
                  </div>
              <% end %>
              <%else %>
              <% flash.each do |key, value| %>
                  <div class="alert alert-danger alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <%= value %>
                  </div>
              <% end %>
              <%end%>


          <%= yield %>

        </div>
      </div>
    </div>

  </body>
</html>
