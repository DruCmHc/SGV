
<h1>Facturas</h1>

<table class="table table-striped" id="tabla-facturas" width="100%">
  <thead>
  <tr>
    <th>Emisor</th>
    <th>Numero</th>
    <th>Id orden combustible</th>
    <th>Id orden respuesto</th>
    <th>Id orden mantenimiento</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @facturas.each do |factura| %>
      <tr>
        <td><%= factura.emisor %></td>
        <td><%= factura.numero %></td>
        <td><%= factura.id_orden_combustible %></td>
        <td><%= factura.id_orden_respuesto %></td>
        <td><%= factura.id_orden_mantenimiento %></td>
        <td>

          <div class="btn-group btn-group-sm no-printable" role="group" aria-label="...">

            <%= link_to raw('<span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>'), factura, class: "btn btn-default", title: "Mostrar Detalles" %>
            <%= link_to raw('<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>'), edit_factura_path(factura), class: "btn btn-default", title: "Editar" %>
            <%= link_to raw('<span class="glyphicon glyphicon-remove" aria-hidden="true"></span>'), factura, method: :delete, data: {confirm: 'EstÃ¡s seguro?'}, class: "btn btn-default" %>

          </div>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Ingresar Factura', new_factura_path, class: "btn btn-default" %>

<script>

  $.extend($.fn.dataTable.defaults, {
    responsive: true
  });

</script>