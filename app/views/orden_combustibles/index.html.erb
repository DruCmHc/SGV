<p id="notice"><%= notice %></p>

<div class="page-header">
  <h1>Órdenes de Combustible <small>Lista</small></h1>
</div>


<table id="tabla-ordenes-combustible" class="table table-striped" width="100%">
  <thead>
  <tr>

    <th>Estacion de Servicio</th>
    <th>Vehiculo placa</th>
    <th>Tipo de Combustible</th>
    <th>Valorcompra</th>
    <th>Persona</th>
    <th>Cedula</th>
    <th>Cargo</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @orden_combustibles.each do |orden_combustible| %>
      <tr>

        <td><%= orden_combustible.estacionServicio %></td>
        <td><%= orden_combustible.vehiculo_placa %></td>
        <td><%= orden_combustible.tipoCombustible %></td>
        <td><%= orden_combustible.valorCompra %></td>
        <td><%= orden_combustible.persona %></td>
        <td><%= orden_combustible.cedula %></td>
        <td><%= orden_combustible.cargo %></td>
        <td>

          <div class="btn-group btn-group-sm no-printable" role="group" aria-label="...">
            <%= link_to raw('<span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>'), orden_combustible, class: "btn btn-default", title: "Mostrar Detalles" %>
            <%= link_to raw('<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>'), edit_orden_combustible_path(orden_combustible), class: "btn btn-warning", title: "Editar" %>
            <%= link_to raw('<span class="glyphicon glyphicon-remove" aria-hidden="true"></span>'), orden_combustible, method: :delete, data: {confirm: '¿Estás seguro?'}, class: "btn btn-danger" %>
          </div>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Orden de combustible', new_orden_combustible_path, class: "btn btn-default" %>

