<h1>Lista de Usuarios: </h1>
<% @users = User.all %>



<table id="tabla-usuarios" class="display" width="100%">

  <thead>
  <tr>

    <th>Cédula</th>
    <th>Nombres</th>
    <th>Apellidos</th>
    <th>Email</th>
    <th>Teléfono</th>
    <th>Cargo</th>
    <th>Departamento</th>
    <th>Estado</th>
    <th></th>

  </tr>
  </thead>

  <tbody>


  <% @users.each do |user| %>
      <tr>
        <td><%= user.cedula %></br></td>
        <td><%= user.name %><br/></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.telephone %></td>
        <td><%= user.charge %></td>
        <td><%= user.department %></td>

        <% if user.approved == false %>
            <td>Por aprobar</td>
        <% elsif user.approved == true %>
            <td>Aprobado</td>
        <% end %>

        <td><%= link_to 'Mostrar', user, class: "btn btn-default" %>
        <%= link_to 'Eliminar', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
        <%= link_to 'Aprobar', user, method: :post, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %></td>
      </tr>
  <% end %>

  </tbody>

</table>

<br>

<script>

  $.extend( $.fn.dataTable.defaults, {
    responsive: true
  } );

  $(document).ready(function() {
    $('#tabla-usuarios').DataTable();
  } );

</script>