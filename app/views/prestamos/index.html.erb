<p id="notice"><%= notice %></p>



<script>

  $(document).ready(function () {
    $('#tabla-prestamo').DataTable();
  });

</script>

<h1>Prestamos</h1>

<table id="tabla-prestamo" class="display" width="100%">
  <thead>
  <tr>
    <th>Fecha Entrega</th>
    <th>Fecha Devolucion</th>
    <th>Razón</th>
    <th>Observaciones</th>
    <th>Persona</th>
    <th>Vehículo</th>
    <th>Estado</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @prestamos.each do |prestamo| %>
      <tr>
        <td><%= prestamo.fechaEntrega %></td>
        <td><%= prestamo.fechaDevolucion %></td>
        <td><%= prestamo.razon %></td>
        <td><%= prestamo.observaciones %></td>
        <td><%= prestamo.user_cedula %></td>
        <td><%= prestamo.vehiculo_placa %></td>

        <% if !prestamo.approved %>
            <td>Por aprobar</td>
        <% elsif prestamo.approved %>
            <td>Aprobado</td>
        <% end %>



        <td>

          <div class="btn-group btn-group-sm" role="group" aria-label="...">

            <%= link_to 'Mostrar', prestamo, class: "btn btn-default" %>

            <% if admin_signed_in? %>

                <%= link_to 'Editar', edit_prestamo_path(prestamo), class: "btn btn-default" %>
                <%= link_to 'Eliminar', prestamo, method: :delete, data: {confirm: 'Estás seguro?'}, class: "btn btn-default" %>
                <%= link_to 'Aprobar', prestamo, method: :post, data: {confirm: 'Estás seguro?'}, class: "btn btn-default" %>


            <% end %>

          </div>

        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>

    <%= link_to 'Nuevo Prestamo', new_prestamo_path, class: "btn btn-default" %>

<% end %>




