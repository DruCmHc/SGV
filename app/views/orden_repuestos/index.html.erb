
<div class="page-header">
  <h1>Órdenes de Repuesto
    <small>Lista</small>
  </h1>
</div>


<table id="tabla-repuestos" class="table table-striped" width="100%">
  <thead>
  <tr>
    <th>Nro.</th>
    <th>Fecha</th>
    <th>Vehículo</th>
    <th>Kilometraje</th>
    <th>Proveedor</th>
    <th>Detalle</th>
    <th>Encargado</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @orden_repuestos.each do |orden_repuesto| %>
      <tr>
        <td><%= orden_repuesto.id %></td>
        <td><%= orden_repuesto.fecha %></td>
        <td><%= orden_repuesto.vehiculo_placa %></td>
        <td><%= orden_repuesto.kilometraje %></td>
        <td><%= orden_repuesto.proveedor %></td>
        <td><%=	orden_repuesto.detalle %></td>
        <td><%= orden_repuesto.encargado %></td>
        <td>

          <div class="btn-group btn-group-sm" role="group" aria-label="...">

            <%= link_to raw('<span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>'), orden_repuesto, title: "Mostrar Detalles", class: "btn btn-default" %>
            <%= link_to raw('<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>'), edit_orden_repuesto_path(orden_repuesto), title: "Editar", class: "btn btn-warning" %>
            <%= link_to raw('<span class="glyphicon glyphicon-remove" aria-hidden="true"></span>'), orden_repuesto, method: :delete, data: {confirm: '¿Estás seguro?'}, class: "btn btn-danger", title: "Eliminar" %>

          </div>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Orden de Repuestos', new_orden_repuesto_path, class: "btn btn-default" %>

