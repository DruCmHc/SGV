<table id="tabla-repuestos" class="display" width="100%">
  <thead>
    <tr>
      <th>Fecha</th>
      <th>Encargado</th>
      <th>Proveedor</th>
      <th>Observaciones</th>
      <th>Vehiculo placa</th>
      <th></th>
